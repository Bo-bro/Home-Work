<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class name="org.demo.models.Customer" table="CUSTOMERS">
        <id name="id" type="int" column="CUST_NUM">
            <generator class="native"/>
        </id>
        <property name="company" column="COMPANY" type="string"/>
        <property name="credit_limit" column="CREDIT_LIMIT" type="java.math.BigDecimal"/>
    </class>
</hibernate-mapping>